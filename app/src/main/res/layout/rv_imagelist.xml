<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="@dimen/dim160"
            android:layout_height="@dimen/dim80"
            android:layout_marginEnd="@dimen/dim16"
            app:cardCornerRadius="@dimen/dim8">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/dim160"
                android:maxHeight="@dimen/dim240"
                android:foreground="@color/gray_50"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/no_image" />

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>